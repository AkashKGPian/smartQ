<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Staff Dashboard | SmartQ</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --primary: #3b82f6;
      --primary-hover: #2563eb;
      --primary-glow: rgba(59, 130, 246, 0.35);
      --accent: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
      --bg: #050a18;
      --surface: rgba(255, 255, 255, 0.04);
      --surface-hover: rgba(255, 255, 255, 0.07);
      --border: rgba(255, 255, 255, 0.08);
      --text: #f1f5f9;
      --text-dim: #64748b;
      --radius: 16px;
      --radius-sm: 12px;
    }

    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      overflow-x: hidden;
    }

    .blob { position: fixed; border-radius: 50%; filter: blur(100px); opacity: 0.4; pointer-events: none; z-index: 0; }
    .blob-1 { width: 500px; height: 500px; background: radial-gradient(circle, rgba(16,185,129,0.18), transparent 70%); bottom: -12%; right: -8%; }
    .blob-2 { width: 400px; height: 400px; background: radial-gradient(circle, rgba(59,130,246,0.15), transparent 70%); top: -10%; left: -5%; }

    /* ── Top Bar ── */
    .topbar {
      position: sticky; top: 0; z-index: 10;
      display: flex; align-items: center; justify-content: space-between;
      padding: 1rem 2rem;
      background: rgba(5,10,24,0.8); backdrop-filter: blur(16px);
      border-bottom: 1px solid var(--border);
    }
    .topbar-left { display: flex; align-items: center; gap: 1rem; }
    .topbar-logo { font-size: 0.85rem; font-weight: 700; letter-spacing: 1.5px; text-transform: uppercase; color: var(--accent); }
    .topbar-badge { padding: 0.2rem 0.65rem; border-radius: 20px; font-size: 0.65rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; background: rgba(16,185,129,0.12); color: var(--accent); border: 1px solid rgba(16,185,129,0.2); }
    .topbar-logout {
      display: inline-flex; align-items: center; gap: 0.3rem; padding: 0.3rem 0.65rem;
      color: var(--text-dim); font-size: 0.72rem; font-weight: 500; text-decoration: none;
      border-radius: 6px; transition: all 0.15s; line-height: 1;
    }
    .topbar-logout:hover { background: rgba(239,68,68,0.08); color: var(--danger); }
    .topbar-logout svg { width: 13px; height: 13px; flex-shrink: 0; }

    /* ── Queue Grid ── */
    .container { position: relative; z-index: 1; max-width: 1200px; margin: 0 auto; padding: 2rem; }
    .page-title { font-size: 1.75rem; font-weight: 800; letter-spacing: -0.5px; margin-bottom: 0.35rem; }
    .page-sub { color: var(--text-dim); font-size: 0.95rem; margin-bottom: 2rem; }

    .queue-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(360px, 1fr)); gap: 1.25rem; }

    .queue-card {
      padding: 1.5rem; border-radius: var(--radius); background: var(--surface);
      backdrop-filter: blur(16px); border: 1px solid var(--border);
      transition: background 0.15s;
    }
    .queue-card:hover { background: var(--surface-hover); }

    .queue-card-header { display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 1rem; }
    .queue-name { font-size: 1.1rem; font-weight: 700; margin-bottom: 0.2rem; }
    .queue-type-badge {
      padding: 0.2rem 0.6rem; border-radius: 20px; font-size: 0.65rem; font-weight: 600;
      text-transform: uppercase; letter-spacing: 0.3px;
      background: rgba(59,130,246,0.1); color: var(--primary); border: 1px solid rgba(59,130,246,0.2);
    }
    .paused-badge { background: rgba(245,158,11,0.1); color: var(--warning); border-color: rgba(245,158,11,0.2); }

    .stats-row { display: flex; gap: 0.75rem; margin-bottom: 1.15rem; }
    .stat-chip {
      display: flex; align-items: center; gap: 0.35rem; padding: 0.4rem 0.75rem;
      border-radius: 8px; background: rgba(0,0,0,0.25); font-size: 0.8rem;
    }
    .stat-chip .label { color: var(--text-dim); }
    .stat-chip .value { font-weight: 700; }

    /* Currently serving */
    .serving-section { padding: 1rem; border-radius: var(--radius-sm); background: rgba(0,0,0,0.2); border: 1px solid var(--border); margin-bottom: 1rem; }
    .serving-label { font-size: 0.7rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; color: var(--text-dim); margin-bottom: 0.5rem; }
    .serving-token { font-size: 1.5rem; font-weight: 800; color: var(--warning); margin-bottom: 0.75rem; }
    .serving-none { font-size: 0.85rem; color: var(--text-dim); }

    .action-row { display: flex; gap: 0.5rem; flex-wrap: wrap; }

    .btn-action {
      flex: 1; min-width: 100px; padding: 0.55rem 0.75rem; font-family: inherit;
      font-size: 0.78rem; font-weight: 600; border: none; border-radius: 8px;
      cursor: pointer; display: inline-flex; align-items: center; justify-content: center;
      gap: 0.35rem; transition: all 0.15s;
    }
    .btn-served  { background: rgba(16,185,129,0.12); color: var(--accent); border: 1px solid rgba(16,185,129,0.2); }
    .btn-served:hover  { background: rgba(16,185,129,0.22); }
    .btn-missed  { background: rgba(239,68,68,0.1); color: var(--danger); border: 1px solid rgba(239,68,68,0.18); }
    .btn-missed:hover  { background: rgba(239,68,68,0.18); }

    .btn-call {
      width: 100%; padding: 0.7rem; font-family: inherit; font-size: 0.85rem; font-weight: 600;
      color: #fff; background: var(--primary); border: none; border-radius: var(--radius-sm);
      cursor: pointer; transition: all 0.15s;
    }
    .btn-call:hover { background: var(--primary-hover); transform: translateY(-1px); box-shadow: 0 6px 20px -4px var(--primary-glow); }

    .btn-pause {
      width: 100%; margin-top: 0.5rem; padding: 0.55rem; font-family: inherit;
      font-size: 0.78rem; font-weight: 600; border-radius: 8px; cursor: pointer;
      transition: all 0.15s;
    }
    .btn-pause-on  { background: rgba(245,158,11,0.1); color: var(--warning); border: 1px solid rgba(245,158,11,0.2); }
    .btn-pause-on:hover  { background: rgba(245,158,11,0.18); }
    .btn-pause-off { background: rgba(16,185,129,0.1); color: var(--accent); border: 1px solid rgba(16,185,129,0.2); }
    .btn-pause-off:hover { background: rgba(16,185,129,0.18); }

    @media (max-width: 480px) {
      .container { padding: 1.25rem; }
      .topbar { padding: 0.75rem 1.25rem; }
      .queue-grid { grid-template-columns: 1fr; }
      .page-title { font-size: 1.35rem; }
    }
  </style>
</head>
<body>
  <div class="blob blob-1"></div>
  <div class="blob blob-2"></div>

  <!-- ── Top Bar ── -->
  <header class="topbar">
    <div class="topbar-left">
      <span class="topbar-logo">SmartQ</span>
      <span class="topbar-badge">Staff</span>
    </div>
    <a class="topbar-logout" href="/api/auth/staff/logout">
      <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H6a2 2 0 01-2-2V7a2 2 0 012-2h5a2 2 0 012 2v1"/></svg>
      Sign Out
    </a>
  </header>

  <!-- ── Main Content ── -->
  <div class="container">
    <h1 class="page-title">Queue Management</h1>
    <p class="page-sub">Monitor and manage today's queues in real time.</p>

    <div class="queue-grid">
      <% queues.forEach(item => { %>
        <div class="queue-card">

          <div class="queue-card-header">
            <div>
              <div class="queue-name"><%= item.queue.storeId ? item.queue.storeId.name : 'Store' %></div>
            </div>
            <div style="display:flex;gap:0.4rem;align-items:center">
              <span class="queue-type-badge"><%= item.queue.type %></span>
              <% if (item.queue.isPaused) { %>
                <span class="queue-type-badge paused-badge">Paused</span>
              <% } %>
            </div>
          </div>

          <div class="stats-row">
            <div class="stat-chip">
              <span class="label">Waiting</span>
              <span class="value"><%= item.waitingCount %></span>
            </div>
          </div>

          <!-- Currently Serving -->
          <div class="serving-section">
            <div class="serving-label">Currently Serving</div>
            <% if (item.currentToken) { %>
              <div class="serving-token">Token #<%= item.currentToken.number %></div>
              <div class="action-row">
                <form method="post" action="/api/token/<%= item.currentToken._id %>/complete" style="flex:1;display:contents">
                  <input type="hidden" name="status" value="SERVED" />
                  <button type="submit" class="btn-action btn-served">Mark Served</button>
                </form>
                <form method="post" action="/api/token/<%= item.currentToken._id %>/complete" style="flex:1;display:contents">
                  <input type="hidden" name="status" value="MISSED" />
                  <button type="submit" class="btn-action btn-missed">Mark Missed</button>
                </form>
              </div>
            <% } else { %>
              <p class="serving-none">No token currently called</p>
            <% } %>
          </div>

          <!-- Call Next -->
          <form method="post" action="/api/token/call-next">
            <input type="hidden" name="queueId" value="<%= item.queue._id %>" />
            <button type="submit" class="btn-call">Call Next Patient</button>
          </form>

          <!-- Pause / Resume -->
          <% if (item.queue.isPaused) { %>
            <form method="post" action="/api/staff/queue/<%= item.queue._id %>/resume">
              <button type="submit" class="btn-pause btn-pause-off">Resume Queue</button>
            </form>
          <% } else { %>
            <form method="post" action="/api/staff/queue/<%= item.queue._id %>/pause">
              <button type="submit" class="btn-pause btn-pause-on">Pause Queue</button>
            </form>
          <% } %>

        </div>
      <% }) %>
    </div>
  </div>

  <!-- Socket.IO client for real-time updates -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    <% queues.forEach(item => { %>
      socket.emit('watch:queue', '<%= item.queue._id %>');
    <% }) %>

    socket.on('token:created',    () => location.reload());
    socket.on('token:called',     () => location.reload());
    socket.on('token:completed',  () => location.reload());
    socket.on('token:cancelled',  () => location.reload());
    socket.on('queue:paused',     () => location.reload());
    socket.on('queue:resumed',    () => location.reload());
  </script>
</body>
</html>
